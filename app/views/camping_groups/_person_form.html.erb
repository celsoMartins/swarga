        <span class="help-block"><%= @new_camping_group.errors[:people].join(', ') %></span>
      </div>
    </div>

    <div class="row">
      <div class='col-xs-12 form-group <%= 'has-error' if @new_camping_group.errors[:people].present? %>'>
        <%= f.label :phone, class: 'control-label' %>
        <%= f.text_field :phone, class: 'form-control' %>
        <span class="help-block"><%= @new_camping_group.errors[:people].join(', ') %></span>
      </div>
    </div>
  </div>
</div>
