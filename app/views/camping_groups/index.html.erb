<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 swarga-header">
      <div class="col-xs-12">
        <h1><%= t('camping_groups.index.title') %></h1>
      </div>
      <div class="col-xs-6">
        <%= link_to t('camping_groups.new.title'), new_camping_group_path, class: 'btn btn-sm btn-primary' %>
      </div>
      <div class="col-xs-6 header-link">
        <%= link_to t('camping_groups.index.left.title', count: @left_camping_groups.size), '#' %>
      </div>
    </div>
  </div>

  <div class="row">
    <%= form_tag camping_groups_path, method: :get, class: 'form-group' do %>
      <div class="col-xs-5 col-xs-offset-1">
        <%= text_field_tag :search_term, params[:search_term], placeholder: t('edit.search.placeholder'), class: 'form-control' %>
      </div>
      <div class="col-xs-2">
        <%= submit_tag t('general.search'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <%= render 'camping_groups_list', camping_groups: @last_day_camping_groups, list_title: t('camping_groups.index.leaving_today.title', value: @last_day_camping_groups.size) %>
  <%= render 'camping_groups_list', camping_groups: @reserved_camping_groups, list_title: t('camping_groups.index.reserved.title', value: @reserved_camping_groups.size) %>
  <%= render 'camping_groups_list', camping_groups: @paid_camping_groups, list_title: t('camping_groups.index.paid.title', value: @paid_camping_groups.size) %>
</div>
