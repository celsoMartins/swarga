<div class="nested-fields">
  <div class="row">
    <div class='col-xs-12 form-group <%= 'has-error' if @person.errors['full_name'].present? %>'>
      <%= f.label :full_name, class: 'control-label' %>
      <%= f.text_field :full_name, autofocus: true, class: 'form-control' %>
      <span class="help-block"><%= @person.errors['full_name'].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class='col-xs-6 form-group <%= 'has-error' if @person.errors['document_number'].present? %>'>
      <%= f.label :document_number, class: 'control-label' %>
      <%= f.text_field :document_number, class: 'form-control' %>
      <span class="help-block"><%= @person.errors['document_number'].join(', ') %></span>
    </div>
    <div class='col-xs-6 form-group <%= 'has-error' if @person.errors['phone'].present? %>'>
      <%= f.label :phone, class: 'control-label' %>
      <%= f.text_field :phone, class: 'form-control' %>
      <span class="help-block"><%= @person.errors['phone'].join(', ') %></span>
    </div>
  </div>

  <div class="row">
    <div class='col-xs-6 form-check botton-spaced-component'>
      <%= f.check_box :courtesy, class: 'form-check-input', checked: nil %>
      <%= f.label :courtesy, class: 'form-check-label' %>
    </div>
  </div>
</div>
