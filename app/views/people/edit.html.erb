
<div class="container">
  <div class="row">
    <div class="col-xs-12 swarga-header">
      <ul class="breadcrumb">
        <li><%= link_to CampingGroup.model_name.human(count: 2), camping_groups_path %></li>
        <li><%= link_to "#{CampingGroup.model_name.human} (#{@camping_group.tent_numbers.join(', ')})", camping_group_path(@camping_group) %></li>
        <li><%= t('people.edit.title') %></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 swarga-header">
      <%= form_for @person, url: camping_group_person_path(@camping_group, @person) do |f| %>
        <%= render 'form', f: f %>
      <% end %>
    </div>
  </div>
</div>
