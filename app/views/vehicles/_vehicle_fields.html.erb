<div class="row">
  <div class='col-xs-12'>
    <div class="row">
      <div class='col-xs-12 form-group'>
        <%= f.label :vehicle_type, class: 'control-label' %>
        <%= f.select :vehicle_type, Vehicle.vehicle_types.map { |key, _value| [t("activerecord.attributes.vehicle.enums.vehicle_types.#{key}"), key] }, { include_blank: 'Selecione um tipo', selected: @new_vehicle.vehicle_type }, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class='col-xs-12 form-group <%= 'has-error' if @new_vehicle.errors[:license_plate].present? %>'>
        <%= f.label :license_plate, class: 'control-label' %>
        <%= f.text_field :license_plate, autofocus: true, class: 'form-control' %>
        <span class="help-block"><%= @new_vehicle.errors[:license_plate].join(', ') %></span>
      </div>
    </div>
  </div>
</div>